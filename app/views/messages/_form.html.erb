<%= form_with(url: messages_path, local: true, class: "form-inline") do |form| %>
  <div class="form-group mb-2">
    <%= form.hidden_field :receivable_type, value: @group.class.name %>
    <%= form.hidden_field :receivable_id, value: @group.id %>
    <%= form.text_field :content, class: "form-control", placeholder: "Type your message here", rows: 1 %>
  </div>
  <div class="form-group mb-2 ml-2">
    <%= form.submit "Send", class: "btn btn-primary" %>
  </div>
<% end %>
