<%= form_with url: messages_path, remote: true, data: { turbo_frame: :message_list } do |f| %>
  <%= f.hidden_field :receivable_type, value: params[:receivable_type] %>
  <%= f.hidden_field :receivable_id, value: params[:receivable_id] %>
  <%= f.text_field :content, hint: "Type here" %>
  <%= f.submit "Send" %>
<% end %>
